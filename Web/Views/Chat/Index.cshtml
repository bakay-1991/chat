@section Scripts {
    <script>
        $('.msg_history').animate({ scrollTop: $('.msg_history').height() }, 100);
        $('.msg_history').scroll(scrollHandler);
    </script>

    <script src="~/js/signalr.min.js"></script>

    <script>
        let hubUrl = "/chat";
        const hubConnection = new signalR.HubConnectionBuilder()
            .withUrl(hubUrl)
            .build();

        let userName = "";
        // получение сообщения от сервера
        hubConnection.on("Receive", function (userId, message) {

            let userNameElem = document.createElement("b");
            userNameElem.appendChild(document.createTextNode(userId + ": "));

            let elem = document.createElement("p");
            elem.appendChild(userNameElem);
            elem.appendChild(document.createTextNode(message));

            var firstElem = document.getElementById("chatroom").firstChild;
            document.getElementById("chatroom").insertBefore(elem, firstElem);

        });

        // отправка сообщения от простого пользователя
        document.getElementById("sendBtn").addEventListener("click", function (e) {
            let receiverId = $('.active_chat').attr('id');
            let message = $("#message").val();
            hubConnection.invoke("Notify", receiverId, message);
            debugger;
            $('.msg_history').append(`<div class="outgoing_msg"><div class="sent_msg"><p>${message}</p><span class="time_date">11: 01 AM</span></div></div>`);
            $('#message').val('').focus();
            $('.msg_history').animate({ scrollTop: $('.msg_history')[0].scrollHeight }, 100);
        });

        hubConnection.start();
    </script>
}